                "summary": "Une recette",
                "operationId": "365cba812bb5a365e77653323d5c64df",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la recette",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Une recette"
                    }
                }
            }
        },
        "/api/recipe/add": {
            "post": {
                "summary": "Cr√©er une recette",
                "operationId": "e39997363100e0fc6b9f853efdd4bcad",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "ingredients": {
                                        "type": "string",
                                        "example": "Poulet, curry, riz"
                                    },
                                    "preparationTime": {
                                        "type": "string"
                                    },
                                    "cookingTime": {
                                        "type": "string"
                                    },
                                    "serves": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Une recette"
                    }
                }
            }
        },
